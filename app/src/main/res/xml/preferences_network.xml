<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<Preference
		android:key="restart_required"
		android:layout="@layout/pref_notification" />
    
	<PreferenceCategory
		android:title="@string/sett_general"
		android:layout="@layout/pref_category">

		<CheckBoxPreference android:title="@string/sett_https"
			android:summary="@string/sett_https_summary" android:key="useHTTPS"
			android:layout="@layout/pref_widget_checkbox"
			android:defaultValue="false"/>

		<CheckBoxPreference android:title="@string/sett_use_proxy"
			android:key="useProxy"
			android:layout="@layout/pref_widget_checkbox"
			android:defaultValue="false"/>
			
		<Preference android:title="@string/sett_proxy_address"
			android:layout="@layout/pref_widget"
			android:summary="" android:key="proxySettings"/>

	</PreferenceCategory>


</PreferenceScreen>
