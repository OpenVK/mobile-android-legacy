<resources>

    <style name="BaseStyle" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBarSpinner</item>
        <item name="preferenceTheme">@style/BaseStyle.PreferenceThemeOverlay</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseStyle.Dark" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Dark</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBarSpinner</item>
        <item name="preferenceTheme">@style/BaseStyle.PreferenceThemeOverlay</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseStyle.Gray" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Gray</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBarSpinner</item>
        <item name="preferenceTheme">@style/BaseStyle.PreferenceThemeOverlay</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="BaseStyle.NoActionBar" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBarSpinner</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseStyle.NoActionBar.NoShadow" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBarSpinner</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseStyle.Dark.Transparent" parent="android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Dark.Transparent</item>
        <item name="android:progressBarStyle">@style/ActionBarProgress</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ActionBarStyle.Dark.Transparent" parent="android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/bg_actionbar_black_transparent_v2</item>
        <item name="android:icon">@drawable/ic_ab_app</item>
        <item name="android:progressBarStyle">@style/ActionBarProgress</item>
    </style>

</resources>