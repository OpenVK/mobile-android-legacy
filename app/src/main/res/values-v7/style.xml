<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseStyle" parent="android:style/Theme.Light">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="preferenceTheme">@style/BaseStyle.PreferenceThemeOverlay</item>
    </style>

    <style name="BaseStyle.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="preferenceFragmentListStyle">@style/BaseStyle.PreferenceThemeOverlay.FragmentList</item>
        <item name="preferenceStyle">@style/BaseStyle.PreferenceThemeOverlay.Preference</item>
    </style>

    <!-- Fix L+R padding issue !-->
    <style name="BaseStyle.PreferenceThemeOverlay.FragmentList">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="preferenceStyle">@style/BaseStyle.PreferenceThemeOverlay.Preference</item>
    </style>

    <style name="BaseStyle.PreferenceThemeOverlay.Preference">
        <item name="android:background">@drawable/highlight</item>
        <item name="android:windowBackground">@drawable/highlight</item>
    </style>

    <style name="BaseStyle.NoActionBar" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="BaseStyle.NoActionBar.NoShadow" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="BaseStyle.DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:padding">20px</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@color/ovk_color</item>
        <item name="android:bottomMedium">@color/ovk_color</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/primary_text_dark</item>
        <item name="android:fullBright">@color/ovk_color</item>
        <item name="android:fullDark">@color/ovk_color</item>
        <item name="android:topDark">@drawable/bg_actionbar</item>
        <item name="android:textAppearanceMedium">@color/window_bg_black</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:buttonStyle">@style/BaseStyle.DialogStyle.Button</item>
    </style>

    <style name="BaseStyle.DialogStyle.List" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
    </style>

    <style name="BaseStyle.DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:textAppearanceMedium">@color/window_bg_black</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:indeterminateDrawable">@drawable/progress_light</item>
        <item name="android:buttonStyle">@style/BaseStyle.DialogStyle.Button</item>
        <item name="android:listViewStyle">@style/BaseStyle.DialogStyle.List</item>
    </style>

    <style name="BaseStyle.DialogStyle.Button">
        <item name="android:background">@drawable/btn_light_blue</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BaseStyle.DialogStyle.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BaseStyle.DialogStyle.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="android:icon">@drawable/ic_ab_app</item>
		<item name="android:progressBarStyle">@style/ActionBarProgress</item>
        <!--item name="android:backgroundStacked">@drawable/action_bar_tabs_bg</item>
        <item name="backgroundStacked">@drawable/action_bar_tabs_bg</item-->
    </style>
    
    <style name="ActionBarProgress" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/ab_progress</item>
        <!--item name="android:indeterminateDrawable">@drawable/abs__progress_indeterminate_horizontal_holo</item-->
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="BaseStyle.Dark" parent="android:style/Theme">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/BaseStyle.DialogStyle.List</item>
    </style>

    <style name="BaseStyle.Dark.Transparent" parent="android:style/Theme">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/BaseStyle.DialogStyle.List</item>
    </style>

    <style name="BaseStyle.Gray" parent="android:style/Theme">
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/BaseStyle.DialogStyle</item>
        <item name="android:alertDialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:dialogTheme">@style/BaseStyle.DialogTheme</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/BaseStyle.DialogStyle.List</item>
    </style>

    <style name="SlidingMenu" parent="android:style/Widget.ListView">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    
    <style name="ActionBarSpinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
    </style>
    
    <style name="ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_dark</item>
    </style>

    <style name="ProgressBar.Light" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_light</item>
    </style>
    
    <style name="ActionBarTitleStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="ActionBarSubtitleStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">#80FFFFFF</item>
    </style>

    <style name="BaseStyleNoTitle" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="DialogNoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="TabletPopupMenu" parent="DialogNoTitle">
        <item name="android:windowAnimationStyle">@style/PopupMenuAnim</item>
    </style>
    
    <style name="PopupMenuAnim">
        <item name="android:windowEnterAnimation">@anim/popup_menu_open</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    
    <style name="EmojiPicker" parent="DialogNoTitle">
        <item name="android:windowAnimationStyle">@style/EmojiPickerAnim</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical_white</item>
    </style>
    <style name="EmojiPickerAnim">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in_fast</item>
        <item name="android:windowExitAnimation">@anim/fade_out_fast</item>
    </style>
    

    <color name="window_bg">#fff</color>
    <color name="window_bg_black">#000</color>
    <color name="window_bg_transparent">#00000000</color>

