    <style name="WhiteScrollbarGridView" parent="@android:style/Widget.GridView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical_white</item>
    </style>
    
    <style name="PopupIfTablet" parent="BaseStyle">
    </style>

    <style name="NoTitleAndShadow" parent="BaseStyleNoTitle">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="VideoPlayer" parent="android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/window_bg_black</item>
    </style>
    <style name="VideoPlayer2" parent="android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/window_bg_black</item>
    </style>
    
    <style name="mtext">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListSectionHeader" parent="android:style/Widget.TextView">
        <item name="android:background">@drawable/list_section_header</item>
        <item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>    
		<item name="android:textColor">#33b5e5</item>    
        <item name="android:padding">8dip</item>
    </style>
    
    <style name="EmptyTextView" parent="android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
		<item name="android:textColor">#80000000</item>    
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center</item>
    </style>

    <attr name="dialogMessageStyle" format="reference"/>

