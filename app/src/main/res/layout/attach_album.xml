<uk.openvk.android.legacy.ui.view.layouts.FixedSizeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/attach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/attach_subtitle"
            android:layout_alignParentLeft="true"
            android:background="#B2000000"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/attach_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B2000000"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#BFFFFFFF"
            android:textSize="15dip" />

    </LinearLayout>

</uk.openvk.android.legacy.ui.view.layouts.FixedSizeFrameLayout>