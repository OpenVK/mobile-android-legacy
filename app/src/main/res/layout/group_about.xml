<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_ext_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#313743"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/about_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@android:drawable/editbox_background"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:id="@+id/description_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/group_descr"
                    android:textAllCaps="true"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/description_label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group description"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/site_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/site_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/group_site"
                    android:textAllCaps="true"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/site_label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="Group website"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>