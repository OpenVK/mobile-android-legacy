<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dip"
    android:background="#E5000000">

    <ViewFlipper
        android:id="@+id/audio_panel_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:background="@drawable/highlight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/audio_panel_cover"
                android:layout_width="58dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:src="#80FFFFFF"/>

            <TextView
                android:id="@+id/audio_panel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dip"
                android:layout_toRightOf="@+id/audio_panel_cover"
                android:text="TextView"
                android:textColor="#e5FFFFFF"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="10dip"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/audio_panel_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_panel_title"
                android:layout_toRightOf="@+id/audio_panel_cover"
                android:text="TextView"
                android:textColor="#99FFFFFF"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="10dip"
                android:textSize="15dip" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/audio_panel_cover2"
                android:layout_width="58dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:src="#80FFFFFF"/>

            <TextView
                android:id="@+id/audio_panel_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dip"
                android:layout_toRightOf="@+id/audio_panel_cover2"
                android:text="TextView"
                android:textColor="#e5FFFFFF"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="10dip"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/audio_panel_artist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_panel_title2"
                android:layout_toRightOf="@+id/audio_panel_cover2"
                android:text="TextView"
                android:textColor="#99FFFFFF"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="10dip"
                android:textSize="15dip" />

        </RelativeLayout>

    </ViewFlipper>

    <ImageView
        android:id="@+id/audio_panel_prev"
        android:layout_width="58dip"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="@drawable/highlight"
        android:src="@drawable/ic_audio_panel_prev" />
    <ImageView
        android:id="@+id/audio_panel_play"
        android:layout_width="58dip"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="@drawable/highlight"
        android:src="@drawable/ic_audio_panel_play" />
    <ImageView
        android:id="@+id/audio_panel_next"
        android:layout_width="58dip"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="@drawable/highlight"
        android:src="@drawable/ic_audio_panel_next" />

</LinearLayout>