<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,InefficientWeight">

        <RelativeLayout
            android:id="@+id/tab_rl"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            tools:ignore="NestedWeights,UselessParent">

            <TextView
                android:id="@+id/tab_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_selector"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Tab text 1"
                android:textAllCaps="true"
                android:textSize="12dip"
                android:textStyle="bold"
                tools:ignore="Deprecated,HardcodedText,NestedWeights,SpUsage,UnusedAttribute" />

            <View
                android:id="@+id/tab_checked"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/tab_indicator"
                android:elevation="1dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl2"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            tools:ignore="NestedWeights,UselessParent">

            <TextView
                android:id="@+id/tab_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_selector"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Tab text 2"
                android:textAllCaps="true"
                android:textSize="12dip"
                android:textStyle="bold"
                tools:ignore="Deprecated,HardcodedText,NestedWeights,SpUsage,UnusedAttribute" />

            <View
                android:id="@+id/tab_checked2"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/tab_indicator"
                android:elevation="1dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl3"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            tools:ignore="NestedWeights,UselessParent">

            <TextView
                android:id="@+id/tab_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_selector"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Tab text 3"
                android:textAllCaps="true"
                android:textSize="12dip"
                android:textStyle="bold"
                tools:ignore="Deprecated,HardcodedText,NestedWeights,SpUsage,UnusedAttribute" />

            <View
                android:id="@+id/tab_checked3"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/tab_indicator"
                android:elevation="1dp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">

    </FrameLayout>

</LinearLayout>