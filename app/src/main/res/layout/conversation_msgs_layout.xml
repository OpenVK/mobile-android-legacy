<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uk.openvk.android.legacy.ui.view.layouts.ActionBarImitation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_imitation"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fitsSystemWindows="false">

        <ListView
            android:id="@+id/conversation_msgs_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:stackFromBottom="true">

        </ListView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_shadow" />

    </RelativeLayout>

    <uk.openvk.android.legacy.ui.view.layouts.ConversationPanel
        android:id="@+id/conversation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>