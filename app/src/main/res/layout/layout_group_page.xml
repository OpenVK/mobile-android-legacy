<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <dev.tinelix.retro_ab.ActionBar
        android:id="@+id/actionbar"
        app:title="@string/app_name"
        style="@style/ActionBar"
        />

    <uk.openvk.android.legacy.ui.view.layouts.ProgressLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_layout"
        android:visibility="gone" />

    <uk.openvk.android.legacy.ui.view.layouts.ErrorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/error_layout"
        android:visibility="gone" />

    <uk.openvk.android.legacy.ui.view.InfinityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3e4e6"
        android:id="@+id/group_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_ext_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313743"
                android:orientation="vertical">

                <uk.openvk.android.legacy.ui.view.layouts.GroupHeader
                    android:id="@+id/group_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </uk.openvk.android.legacy.ui.view.layouts.GroupHeader>

                <uk.openvk.android.legacy.ui.view.layouts.AboutGroupLayout
                    android:id="@+id/about_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">

                </uk.openvk.android.legacy.ui.view.layouts.AboutGroupLayout>

                <Button
                    android:id="@+id/join_to_comm"
                    style="@style/BlueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/join_group"
                    android:visibility="gone"/>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">

                    <uk.openvk.android.legacy.ui.view.layouts.ProfileCounterLayout
                        android:id="@+id/members_counter"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1">

                    </uk.openvk.android.legacy.ui.view.layouts.ProfileCounterLayout>
                </TableRow>

            </LinearLayout>

            <uk.openvk.android.legacy.ui.view.layouts.ProfileWallSelector
                android:id="@+id/wall_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <uk.openvk.android.legacy.ui.view.layouts.WallErrorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:visibility="gone"
                android:id="@+id/wall_error_layout"
                />

            <uk.openvk.android.legacy.ui.view.layouts.WallLayout
                android:id="@+id/wall_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e3e4e6"
                android:descendantFocusability="blocksDescendants"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </uk.openvk.android.legacy.ui.view.InfinityScrollView>

</LinearLayout>