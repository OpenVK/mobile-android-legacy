<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/dfgh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/textfield_left_search"
        android:layout_marginTop="12dip" >

        <EditText
            android:id="@+id/quick_search_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_left_search"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="textFilter"
            android:orientation="horizontal"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="#FFF"
            android:textColorHint="#62646a"
            android:textSize="17dip" />

        <ImageView
            android:id="@+id/quick_search_clear"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_attach_remove" />
        <ImageView
            android:id="@+id/quick_search_voice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_btn_speak_now" />

    </LinearLayout>

</FrameLayout>
