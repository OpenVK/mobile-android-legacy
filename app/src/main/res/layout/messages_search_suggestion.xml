<uk.openvk.android.legacy.ui.layouts.FullWidthLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/msg_suggestion_photo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/photo_loading" />

    <TextView
        android:id="@+id/msg_suggestion_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="12dip"
        android:singleLine="true"
        android:textSize="18dip"
        android:textColor="#000"
        android:text="TextView" />

</uk.openvk.android.legacy.ui.layouts.FullWidthLinearLayout>