<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|bottom"
    android:orientation="vertical"
    android:paddingTop="4dip"
    android:paddingBottom="4dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/msg_sender_photo"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="8dip"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_loading" />

        <LinearLayout
            android:id="@+id/msg_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/bg_msg_in_full"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <uk.openvk.android.legacy.user_interface.view.TightTextView
                    android:id="@+id/msg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:autoLink="web|email"
                    android:paddingBottom="2dip"
                    android:paddingLeft="7dip"
                    android:paddingRight="4dip"
                    android:paddingTop="2dip"
                    android:text="TextViewf"
                    android:textColor="#000"
                    android:textColorHighlight="#802B587A"
                    android:textColorLink="@color/ovk_color"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/msg_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:gravity="left"
                    android:paddingLeft="4dip"
                    android:paddingRight="4dip"
                    android:shadowColor="#FFF"
                    android:shadowDy="1"
                    android:shadowRadius="0.000001"
                    android:singleLine="true"
                    android:text="22:22"
                    android:textColor="#9faab7"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/msg_attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/msg_time_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:shadowColor="#FFF"
                android:shadowDy="1"
                android:shadowRadius="0.000001"
                android:singleLine="true"
                android:text="22:22"
                android:textColor="#9faab7"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
